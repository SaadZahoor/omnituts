<% @page_title = "Admin Login" %>
<div class="admin-login-action">
  <h3>Login below:</h2>
  <%= form_tag :action => 'attempt_login' do %>
    <p>
      <%= label_tag :username %><br />
      <%= text_field_tag :username %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Login" %></p>
  <% end %>
</div>