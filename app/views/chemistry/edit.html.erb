<%= error_messages_for(@chemtut) %>
<%= form_for(:chemtut, :url => {:action => 'update', :id => @chemtut.id}) do |f| %>
  <%= f.label(:course_id, "Course:", :class => 'form-label') %>
  <br />
  <%= f.select(:course_id, @courses.map { |c| [c.course_name, c.id] }) %><i class="fa fa-sort-asc dropdown-arrow"></i>
  <br />
  <br />
  <%= f.label(:tut_title, "Tutorial Title: ", :class => 'form-label') %>
  <br />
  <%= f.text_field(:tut_title) %>
  <br />
  <br />
  <%= f.label(:tut_content, "Tutorial Content:", :class => 'form-label') %>
  <br />
  <%= f.text_area(:tut_content) %>
  <br />
  <br />
  <%= submit_tag("Update Tutorial", :class => 'form-submit-button') %>
<% end %>
<br />
<%= link_to("Back to tutorials", {:action => 'index'}, :class => 'tut-back-link') %>